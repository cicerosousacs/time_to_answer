<div class="x_title">
  <h2><%= t('messages.listing',model: @questions.model_name.human(count: 2)) %></h2>
  <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table">
      <thead>
        <tr>


          <th><%= translate_attribute(@questions, :description)%></th>
          <th><%= translate_attribute(@questions, :subject)%></th>
          <th>
            <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
              <i class="fa fa-plus"></i>
            <% end %>    
          </th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.description.truncate(90) %></td>
            <td><%= question.subject.description.truncate(35) %></td>

            <td style="width: 110px">
              <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to admins_backoffice_question_path(question), method: :delete, 
                class:"btn btn-danger btn-circle", 
                data: { confirm: t('messages.confirm', item: question.description.truncate(50) )} do %>
                <i class="fa fa-minus"></i>
              <% end %>     

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <%= paginate @questions %>

  </div>
  </div>
                
</div>